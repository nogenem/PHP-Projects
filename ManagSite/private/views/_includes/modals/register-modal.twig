<!-- Modal -->
<div class="modal fade" id="register-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Register</h4>
      </div>
      <form action="" method="post" class="form-horizontal">
        <div class="modal-body">
          <div class="form-group">
            <label for="user_name" class="col-lg-12 control-label"><p class="text-left">User Name</p></label>
            <div class="col-lg-12">
              <input type="text" name="user_name" class="form-control" id="user_name">
            </div>
          </div>
          <div class="form-group">
            <label for="user" class="col-lg-12 control-label"><p class="text-left">User</p></label>
            <div class="col-lg-12">
              <input type="text" name="user" class="form-control" id="user">
            </div>
          </div>
          <div class="form-group">
            <label for="user_password" class="col-lg-12 control-label"><p class="text-left">Password</p></label>
            <div class="col-lg-12">
              <input type="password" name="user_password" class="form-control" id="user_password">
            </div>
          </div>
        </div><!-- .form-group -->
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Member Register</button>
        </div><!-- .modal-footer -->
      </form><!-- .form-horizontal -->
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div> <!-- #login-modal -->